@using LiveElections.Extensions;
@model IList<LiveElections.Models.CandidateModel>

@{
    ViewBag.Title = "Candidates";
}

<h2>Candidates</h2>

@if (User.IsAdmin())
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @if (User.IsAdmin())
                {
                    <text> | @Html.ActionLink("Edit", "Edit", new { id = item.Id }) | @Html.ActionLink("Delete", "Delete", new { id = item.Id })</text>
                }
            </td>
        </tr>
    }

</table>
