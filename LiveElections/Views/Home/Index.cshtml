@using LiveElections.Models
@model ElectionSummaryModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Live Elections</h1>
</div>

<div class="container">

    <p>Click @Html.ActionLink("here", "Index", "Vote") to vote.</p>
    <dl class="dl-horizontal">
        <dt>Number of candidates</dt>
        <dd><span class="badge">@Model.NumberOfCandidates</span></dd>
        <dt>Number of votes</dt>
        <dd><span class="badge">@Model.NumberOfVotes</span></dd>
    </dl>
    @if (Model.TopCandidates.Any())
    {
        <p>
            Top candidates
            <ul>
                @foreach (var candidate in Model.TopCandidates)
                {
                    <li>
                        @candidate.FirstName @candidate.LastName
                    </li>
                }
            </ul>
        </p>

    }
</div>